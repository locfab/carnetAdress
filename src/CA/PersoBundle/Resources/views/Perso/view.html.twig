{# templates/blog/index.html.twig #}
{% extends 'CAPersoBundle::base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>perso {{ perso.username }}</h1>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h2> Description </h2>
                            <p> Age : {{ perso.age }} </p>
                            {% if perso.nourriture |length > 0 %}
                                    <p> Nourriture : </p>
                                {% for nourriture in perso.nourriture %}
                                    {% if nourriture.name %}
                                        <p>   - {{ nourriture.name }}</p>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <p> Pas de nourriture enregistr√©e</p>
                            {% endif %}
                            {% if perso.famille and perso.famille.name %}
                                <p> Famille: {{ perso.famille.name }}</p>
                            {% endif %}
                            <p> Race : {{ perso.race }}</p>

                            {% if app.user %}
                                {% if app.user.id == perso.id %}
                                    <button type="button" class="btn btn-primary"> <a href="{{ path('ca_perso_edit', {'id': perso.id})}}"> editez Profil </a></button>
                                {% else %}
                                    <button type="button" class="btn btn-primary"> <a href="{{ path('ca_perso_add_friend', {'id': perso.id})}}"> add or remove friend </a></button>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}